generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id
  name     String
  email    String  @unique
  password String
  Music    Music[]

  @@map("users")
}

model Music {
  id          String  @id
  name        String
  album       String
  artist      String
  genre       String
  year        String
  cover_image String?
  music_url   String?
  user        User    @relation(fields: [userId], references: [id])
  userId      String

  @@map("musics")
}
